<?xml version="1.0" encoding="utf-8"?>
<com.balysv.materialripple.MaterialRippleLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_horizontal"
    android:id="@+id/mrl_main"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    app:mrl_rippleRoundedCorners="@dimen/_5sdp"
    style="@style/RippleStyleDark">
    <androidx.appcompat.widget.LinearLayoutCompat
        android:gravity="center_horizontal"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:paddingTop="@dimen/_7sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_category_img"
            android:layout_width="@dimen/_34sdp"
            android:layout_height="@dimen/_34sdp"/>
        <com.jeil.emarket.components.textview.TextView
            android:ellipsize="none"
            android:gravity="center"
            android:id="@+id/tv_category_name"
            android:paddingLeft="@dimen/_3sdp"
            android:paddingRight="@dimen/_3sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_marginBottom="@dimen/_6sdp"
            android:singleLine="true"
            android:paddingHorizontal="@dimen/_3sdp"
            style="@style/txt_home_category"/>
    </androidx.appcompat.widget.LinearLayoutCompat>
</com.balysv.materialripple.MaterialRippleLayout>
