<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View
        android:id="@+id/vw_header_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_0sdp"/>
    <RelativeLayout
        android:id="@+id/ll_header"
        android:paddingTop="@dimen/_1sdp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:paddingStart="@dimen/_5sdp"
        android:paddingEnd="@dimen/_2sdp">
        <com.balysv.materialripple.MaterialRippleLayout
            android:id="@+id/mrl_header_menu"
            android:padding="@dimen/_10sdp"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_1sdp"
            android:layout_centerVertical="true"
            app:mrl_rippleRoundedCorners="@dimen/_7sdp"
            style="@style/RippleStyleDark">
            <androidx.appcompat.widget.AppCompatImageView
                android:theme="@style/Theme.AppCompat"
                android:layout_width="@dimen/_22sdp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="-1dp"
                app:srcCompat="@drawable/ic_hamburger"/>
        </com.balysv.materialripple.MaterialRippleLayout>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:paddingBottom="@dimen/_1sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true">
            <com.balysv.materialripple.MaterialRippleLayout
                android:id="@+id/mrl_header_back"
                android:paddingTop="@dimen/_8sdp"
                android:paddingBottom="@dimen/_8sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/_6sdp"
                android:paddingEnd="@dimen/_10sdp"
                android:paddingVertical="@dimen/_8sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:mrl_rippleRoundedCorners="@dimen/_7sdp"
                style="@style/RippleStyleDark">
                <androidx.appcompat.widget.AppCompatImageView
                    android:theme="@style/Theme.AppCompat"
                    android:id="@+id/iv_header_back"
                    android:background="@drawable/bd_fill_circle"
                    android:paddingTop="@dimen/_5sdp"
                    android:paddingBottom="@dimen/_5sdp"
                    android:layout_width="@dimen/_28sdp"
                    android:layout_height="@dimen/_28sdp"
                    android:scaleType="fitXY"
                    android:paddingStart="@dimen/_4sdp"
                    android:paddingEnd="@dimen/_6sdp"
                    android:paddingVertical="@dimen/_5sdp"
                    app:srcCompat="@drawable/ic_angle_left"/>
            </com.balysv.materialripple.MaterialRippleLayout>
        </androidx.appcompat.widget.LinearLayoutCompat>
        <com.jeil.emarket.components.textview.TextViewBold
            android:ellipsize="marquee"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:id="@+id/tv_header_title"
            android:paddingLeft="@dimen/_40sdp"
            android:paddingTop="@dimen/_7sdp"
            android:paddingRight="@dimen/_40sdp"
            android:paddingBottom="@dimen/_7sdp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:singleLine="true"
            android:layout_centerInParent="true"
            android:marqueeRepeatLimit="marquee_forever"
            android:layout_marginStart="@dimen/_2sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:paddingHorizontal="@dimen/_40sdp"
            android:paddingVertical="@dimen/_7sdp"
            style="@style/txt_page_title"/>
    </RelativeLayout>
    <View
        android:id="@+id/header_border"
        android:background="@color/border"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_0_5sdp"/>
</androidx.appcompat.widget.LinearLayoutCompat>
