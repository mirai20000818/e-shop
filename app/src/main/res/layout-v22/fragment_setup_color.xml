<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.jeil.emarket.components.textview.TextView
        android:textSize="@dimen/font_21"
        android:textColor="@color/dark"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_20sdp"
        android:text="@string/select_primary_color"/>
    <com.jeil.emarket.components.textview.TextView
        android:textSize="@dimen/font_12"
        android:gravity="center_horizontal"
        android:layout_width="@dimen/_230sdp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_17sdp"
        android:text="@string/select_primary_color_desc"
        android:lineSpacingExtra="@dimen/_8sdp"/>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:gravity="center"
        android:layout_width="@dimen/_280sdp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_25sdp">
        <com.jeil.emarket.components.product.ColorSwatch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/half_space"
            app:cs_color="@color/primary1"
            app:cs_index="1"/>
        <com.jeil.emarket.components.product.ColorSwatch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/half_space"
            android:layout_marginRight="@dimen/half_space"
            android:layout_marginHorizontal="@dimen/half_space"
            app:cs_color="@color/primary2"
            app:cs_index="2"/>
        <com.jeil.emarket.components.product.ColorSwatch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/half_space"
            android:layout_marginRight="@dimen/half_space"
            android:layout_marginHorizontal="@dimen/half_space"
            app:cs_color="@color/primary3"
            app:cs_index="3"/>
        <com.jeil.emarket.components.product.ColorSwatch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/half_space"
            android:layout_marginRight="@dimen/half_space"
            android:layout_marginHorizontal="@dimen/half_space"
            app:cs_color="@color/primary4"
            app:cs_index="4"/>
        <com.jeil.emarket.components.product.ColorSwatch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/half_space"
            android:layout_marginRight="@dimen/half_space"
            android:layout_marginHorizontal="@dimen/half_space"
            app:cs_color="@color/primary5"
            app:cs_index="5"/>
        <com.jeil.emarket.components.product.ColorSwatch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/half_space"
            android:layout_marginRight="@dimen/half_space"
            android:layout_marginHorizontal="@dimen/half_space"
            app:cs_color="@color/primary6"
            app:cs_index="6"/>
    </androidx.appcompat.widget.LinearLayoutCompat>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.jeil.emarket.components.button.CustomButton
            android:textSize="@dimen/font_12"
            android:textColor="@color/white"
            android:id="@+id/cb_skip"
            android:paddingLeft="@dimen/_0sdp"
            android:paddingTop="@dimen/_15sdp"
            android:paddingRight="@dimen/_0sdp"
            android:paddingBottom="@dimen/_15sdp"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="wrap_content"
            android:text="@string/setup_skip"
            android:layout_marginEnd="@dimen/main_space"
            android:paddingHorizontal="@dimen/_0sdp"
            android:paddingVertical="@dimen/_15sdp"
            app:b_color="@color/dark"
            app:b_corner_radius="@dimen/_5sdp"/>
        <com.jeil.emarket.components.button.CustomButton
            android:textSize="@dimen/font_12"
            android:textColor="@color/white"
            android:id="@+id/cb_next"
            android:paddingTop="@dimen/_13sdp"
            android:paddingBottom="@dimen/_13sdp"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="wrap_content"
            android:text="@string/action_next"
            android:paddingStart="@dimen/_40sdp"
            android:paddingEnd="@dimen/_20sdp"
            android:paddingVertical="@dimen/_13sdp"
            app:b_color="?attr/colorPrimary"
            app:b_corner_radius="@dimen/_5sdp"
            app:icon="@drawable/ic_angle_right"
            app:iconGravity="textEnd"
            app:iconPadding="@dimen/_5sdp"
            app:iconSize="@dimen/font_17"
            app:iconTint="@color/white"/>
    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.appcompat.widget.LinearLayoutCompat>
