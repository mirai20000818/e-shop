<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/_3sdp"
    android:layout_marginTop="@dimen/_2sdp"
    android:layout_marginRight="@dimen/_3sdp"
    android:layout_marginBottom="@dimen/_2sdp"
    android:layout_marginHorizontal="@dimen/_3sdp"
    android:layout_marginVertical="@dimen/_2sdp">
    <com.balysv.materialripple.MaterialRippleLayout
        android:id="@+id/mrl_message"
        android:paddingLeft="@dimen/_3sdp"
        android:paddingTop="@dimen/_6sdp"
        android:paddingRight="@dimen/_3sdp"
        android:paddingBottom="@dimen/_6sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/_3sdp"
        android:paddingVertical="@dimen/_6sdp"
        app:mrl_rippleRoundedCorners="@dimen/_3sdp"
        style="@style/RippleStyleDark">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_gravity="end"
            android:id="@+id/llc_message"
            android:background="@drawable/bg_input_border"
            android:padding="@dimen/_13sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/light_bg">
            <com.jeil.emarket.components.textview.TextView
                android:textSize="@dimen/font_12"
                android:textColor="@color/body"
                android:id="@+id/tv_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="@dimen/_225sdp"
                android:lineSpacingExtra="@dimen/_8sdp"/>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </com.balysv.materialripple.MaterialRippleLayout>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:gravity="center_vertical"
        android:layout_gravity="end"
        android:id="@+id/llc_updated_at"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_3sdp"
        android:layout_marginTop="@dimen/_2sdp"
        android:layout_marginRight="@dimen/_3sdp"
        android:layout_marginBottom="@dimen/_6sdp"
        android:layout_marginHorizontal="@dimen/_3sdp">
        <com.jeil.emarket.components.CircleImageView
            android:theme="@style/Theme.AppCompat"
            android:id="@+id/iv_user_avatar"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_marginEnd="@dimen/_4sdp"
            app:srcCompat="@drawable/ic_placeholder"/>
        <com.jeil.emarket.components.textview.TextView
            android:textSize="@dimen/font_10_5"
            android:textColor="@color/body"
            android:id="@+id/tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="@dimen/_8sdp"
            android:layout_marginEnd="@dimen/_6sdp"/>
        <com.jeil.emarket.components.textview.TextView
            android:textSize="@dimen/font_10_5"
            android:textColor="@color/body"
            android:id="@+id/tv_created_at"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="@dimen/_8sdp"/>
    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.appcompat.widget.LinearLayoutCompat>
