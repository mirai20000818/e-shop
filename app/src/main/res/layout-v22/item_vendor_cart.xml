<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/bg_box"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/main_space"
    android:layout_marginBottom="@dimen/main_space"
    android:layout_marginVertical="@dimen/main_space">
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_13sdp"
            android:layout_marginEnd="@dimen/_8sdp">
            <com.jeil.emarket.components.checkbox.CheckBox
                android:id="@+id/cb_vendor"
                android:background="@drawable/bg_grey_round"
                android:padding="@dimen/_0sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_4sdp"
                android:backgroundTint="@color/overlay"
                style="@style/CustomCheckBox"/>
            <com.jeil.emarket.components.textview.TextView
                android:textSize="@dimen/font_14"
                android:textColor="@color/dark"
                android:id="@+id/tv_vendor_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <com.jeil.emarket.components.ActionLink
                android:id="@+id/cal_delete"
                android:paddingLeft="@dimen/_10sdp"
                android:paddingTop="@dimen/_5sdp"
                android:paddingRight="@dimen/_10sdp"
                android:paddingBottom="@dimen/_5sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:paddingHorizontal="@dimen/_10sdp"
                android:paddingVertical="@dimen/_5sdp"
                app:al_distance="@dimen/_3sdp"
                app:al_drawable="@drawable/ic_trash"
                app:al_drawable_color="@color/dark"
                app:al_drawable_size="@dimen/_18sdp"
                app:al_drawable_start="true"
                app:al_ripple_radius="true"
                app:al_text="@string/delete"
                app:al_text_color="@color/dark"
                app:al_text_size="@dimen/font_11_5"
                style="@style/RippleStyleDark"/>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.appcompat.widget.LinearLayoutCompat>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_cart_products"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:nestedScrollingEnabled="false"/>
    <View
        android:background="@drawable/bg_dotted_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_2sdp"
        android:layerType="software"/>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:gravity="center_vertical"
        android:paddingTop="@dimen/_15sdp"
        android:paddingBottom="@dimen/_15sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_18sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:paddingVertical="@dimen/_15sdp">
        <com.jeil.emarket.components.textview.TextView
            android:textSize="@dimen/font_12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/total_pay_vendor"
            android:layout_weight="1"
            style="@style/txt_label_lg"/>
        <com.jeil.emarket.components.price.PriceText
            android:id="@+id/pt_total_kpf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:pt_currency="kpf"
            app:pt_size="@dimen/font_13"
            app:pt_unit_size="@dimen/font_11"/>
        <com.jeil.emarket.components.price.PriceText
            android:id="@+id/pt_total_kpw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_4sdp"
            app:pt_currency="kpw"
            app:pt_size="@dimen/font_13"
            app:pt_unit_size="@dimen/font_11"/>
    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.appcompat.widget.LinearLayoutCompat>
