<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/ll_main"
    android:background="@drawable/bg_box"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/main_space"
    android:layout_marginRight="@dimen/main_space"
    android:layout_marginHorizontal="@dimen/main_space">
    <androidx.appcompat.widget.LinearLayoutCompat
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/_16sdp"
            android:paddingRight="@dimen/_16sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_16sdp"
            android:layout_marginBottom="@dimen/_16sdp"
            android:layout_marginVertical="@dimen/_16sdp"
            android:paddingHorizontal="@dimen/_16sdp">
            <com.jeil.emarket.components.CircleImageView
                android:id="@+id/iv_avatar"
                android:layout_width="@dimen/_54sdp"
                android:layout_height="@dimen/_54sdp"
                android:src="@drawable/man"
                android:layout_marginEnd="@dimen/_12sdp"/>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_8sdp">
                    <com.jeil.emarket.components.textview.TextView
                        android:textSize="@dimen/font_11_5"
                        android:textColor="@color/dark"
                        android:id="@+id/tv_username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_12sdp"/>
                    <com.jeil.emarket.components.textview.TextView
                        android:textSize="@dimen/font_11_5"
                        android:textColor="@color/light"
                        android:id="@+id/tv_review_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </androidx.appcompat.widget.LinearLayoutCompat>
                <ProgressBar
                    android:id="@+id/pb_rating"
                    android:layout_width="80dp"
                    android:layout_height="@dimen/_13sdp"
                    android:indeterminate="false"
                    android:progressDrawable="@drawable/bg_progress_rating"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"/>
            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.appcompat.widget.LinearLayoutCompat>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:paddingLeft="@dimen/_16sdp"
            android:paddingRight="@dimen/_16sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_8sdp"
            android:paddingHorizontal="@dimen/_16sdp">
            <com.jeil.emarket.components.textview.TextView
                android:layout_width="@dimen/_81sdp"
                android:layout_height="wrap_content"
                android:text="@string/product_name_label"
                style="@style/txt_label"/>
            <com.jeil.emarket.components.textview.TextView
                android:textSize="@dimen/font_11_5"
                android:textColor="@color/dark"
                android:id="@+id/ctv_product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="@dimen/_6sdp"/>
        </androidx.appcompat.widget.LinearLayoutCompat>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:paddingLeft="@dimen/_16sdp"
            android:paddingRight="@dimen/_16sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_8sdp"
            android:paddingHorizontal="@dimen/_16sdp">
            <com.jeil.emarket.components.textview.TextView
                android:layout_width="@dimen/_81sdp"
                android:layout_height="wrap_content"
                android:text="@string/vendor_name_comma"
                style="@style/txt_label"/>
            <com.jeil.emarket.components.textview.TextView
                android:id="@+id/ctv_vendor_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/txt_info"/>
        </androidx.appcompat.widget.LinearLayoutCompat>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:gravity="center_vertical"
            android:id="@+id/llc_pay"
            android:paddingLeft="@dimen/_16sdp"
            android:paddingRight="@dimen/_16sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_10sdp"
            android:paddingHorizontal="@dimen/_16sdp">
            <com.jeil.emarket.components.textview.TextView
                android:layout_width="@dimen/_81sdp"
                android:layout_height="wrap_content"
                android:text="@string/pay"
                style="@style/txt_label"/>
            <com.jeil.emarket.components.price.PriceText
                android:id="@+id/pt_pay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:pt_hideEmpty="false"
                app:pt_size="@dimen/font_14"
                app:pt_unit_size="@dimen/font_11_5"/>
        </androidx.appcompat.widget.LinearLayoutCompat>
        <com.jeil.emarket.components.textview.TextView
            android:textSize="@dimen/font_11_5"
            android:id="@+id/tv_review_content"
            android:paddingLeft="@dimen/_16sdp"
            android:paddingRight="@dimen/_16sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_marginBottom="@dimen/_8sdp"
            android:lineSpacingExtra="@dimen/_8sdp"
            android:paddingHorizontal="@dimen/_16sdp"/>
        <HorizontalScrollView
            android:scrollbarSize="@dimen/_0sdp"
            android:id="@+id/sv_images"
            android:paddingLeft="@dimen/_16sdp"
            android:paddingRight="@dimen/_16sdp"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:paddingHorizontal="@dimen/_16sdp">
            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/ll_images"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </HorizontalScrollView>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_gravity="center_vertical"
            android:id="@+id/ll_action"
            android:paddingLeft="@dimen/_10sdp"
            android:paddingRight="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_6sdp"
            android:paddingHorizontal="@dimen/_10sdp">
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <com.jeil.emarket.components.ActionLink
                    android:id="@+id/cal_review_votes"
                    android:padding="@dimen/_5sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:al_distance="@dimen/_3sdp"
                    app:al_drawable="@drawable/ic_thumb_up"
                    app:al_drawable_size="@dimen/_18sdp"
                    app:al_drawable_start="true"
                    app:al_rippleAlpha="0"
                    app:al_text="@string/edit"
                    app:al_text_color="?attr/colorPrimary"
                    app:al_text_size="@dimen/font_13"/>
            </androidx.appcompat.widget.LinearLayoutCompat>
            <com.jeil.emarket.components.ActionLink
                android:id="@+id/cal_reply"
                android:padding="@dimen/_5sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:al_distance="@dimen/_5sdp"
                app:al_drawable="@drawable/ic_back"
                app:al_drawable_color="?attr/colorPrimary"
                app:al_drawable_size="@dimen/_20sdp"
                app:al_drawable_start="true"
                app:al_text="@string/reply"
                app:al_text_color="?attr/colorPrimary"
                app:al_text_size="@dimen/font_11_5"
                app:mrl_rippleRoundedCorners="@dimen/_30sdp"
                style="@style/RippleStyleDark"/>
        </androidx.appcompat.widget.LinearLayoutCompat>
        <View
            android:id="@+id/v_reply_line"
            android:background="@drawable/bg_dotted_line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_2sdp"
            android:layout_marginLeft="@dimen/_9sdp"
            android:layout_marginRight="@dimen/_9sdp"
            android:layerType="software"
            android:layout_marginHorizontal="@dimen/_9sdp"/>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/ll_reply"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_18sdp"
            android:paddingStart="@dimen/_16sdp"
            android:paddingEnd="@dimen/_11sdp">
            <com.jeil.emarket.components.textview.TextView
                android:textSize="@dimen/font_11_5"
                android:textColor="@color/light"
                android:id="@+id/tv_reply_vendor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_3sdp"
                android:text="@string/vendor_name_comma"
                android:layout_marginEnd="@dimen/_14sdp"/>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:gravity="center_vertical"
                    android:id="@+id/llc_reply_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_4sdp">
                    <com.jeil.emarket.components.textview.TextView
                        android:textSize="@dimen/font_8_5"
                        android:textColor="@color/white"
                        android:id="@+id/ctv_review_status"
                        android:background="@drawable/bd_badge_round"
                        android:paddingLeft="@dimen/_8sdp"
                        android:paddingTop="@dimen/_4sdp"
                        android:paddingRight="@dimen/_8sdp"
                        android:paddingBottom="@dimen/_4sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:layout_marginBottom="@dimen/_4sdp"
                        android:text="@string/completed"
                        android:backgroundTint="@color/completed"
                        android:paddingHorizontal="@dimen/_8sdp"
                        android:paddingVertical="@dimen/_4sdp"/>
                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>
                    <com.jeil.emarket.components.ActionLink
                        android:layout_gravity="end"
                        android:id="@+id/cal_edit_review"
                        android:paddingLeft="@dimen/_8sdp"
                        android:paddingTop="@dimen/_3sdp"
                        android:paddingRight="@dimen/_8sdp"
                        android:paddingBottom="@dimen/_3sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="@dimen/_8sdp"
                        android:paddingVertical="@dimen/_3sdp"
                        app:al_distance="@dimen/_5sdp"
                        app:al_drawable="@drawable/ic_edit_primary"
                        app:al_drawable_size="@dimen/_18sdp"
                        app:al_drawable_start="true"
                        app:al_text="@string/edit"
                        app:al_text_color="?attr/colorPrimary"
                        app:al_text_size="@dimen/font_11_5"
                        app:mrl_rippleRoundedCorners="@dimen/_30sdp"
                        style="@style/RippleStyleDark"/>
                </androidx.appcompat.widget.LinearLayoutCompat>
                <com.jeil.emarket.components.textview.TextView
                    android:textSize="@dimen/font_11_5"
                    android:id="@+id/tv_reply_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_1sdp"
                    android:lineSpacingExtra="@dimen/_8sdp"
                    android:layout_marginEnd="@dimen/_5sdp"/>
                <com.jeil.emarket.components.textview.TextView
                    android:textSize="@dimen/font_12_5"
                    android:textColor="@color/light"
                    android:id="@+id/tv_reply_at"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginEnd="@dimen/_5sdp"/>
            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.appcompat.widget.LinearLayoutCompat>
