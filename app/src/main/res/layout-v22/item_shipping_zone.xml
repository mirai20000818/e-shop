<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_box"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/main_space"
    android:layout_marginRight="@dimen/main_space"
    android:layout_marginHorizontal="@dimen/main_space">
    <com.balysv.materialripple.MaterialRippleLayout
        android:id="@+id/mrl_show_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:mrl_rippleRoundedCorners="@dimen/_7sdp"
        style="@style/RippleStyleDark">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/box_padding">
            <androidx.appcompat.widget.LinearLayoutCompat
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_10sdp">
                <com.jeil.emarket.components.textview.TextView
                    android:layout_width="@dimen/_89sdp"
                    android:layout_height="wrap_content"
                    android:text="@string/shipping_zone_name_comma"
                    style="@style/txt_label"/>
                <com.jeil.emarket.components.textview.TextView
                    android:id="@+id/ctv_zone_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_40sdp"
                    style="@style/txt_info"/>
            </androidx.appcompat.widget.LinearLayoutCompat>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_10sdp">
                <com.jeil.emarket.components.textview.TextView
                    android:layout_width="@dimen/_89sdp"
                    android:layout_height="wrap_content"
                    android:text="@string/include_zones_comma"
                    style="@style/txt_label"/>
                <com.jeil.emarket.components.textview.TextView
                    android:id="@+id/ctv_zones"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="@dimen/_6sdp"
                    style="@style/txt_info"/>
            </androidx.appcompat.widget.LinearLayoutCompat>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_10sdp">
                <com.jeil.emarket.components.textview.TextView
                    android:layout_width="@dimen/_89sdp"
                    android:layout_height="wrap_content"
                    android:text="@string/common_shipping_comma"
                    style="@style/txt_label"/>
                <com.jeil.emarket.components.price.PriceText
                    android:id="@+id/pt_common_shipping_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:pt_size="@dimen/font_11_5"
                    app:pt_unit_size="@dimen/font_11_5"/>
                <com.jeil.emarket.components.textview.TextView
                    android:textColor="@color/free"
                    android:id="@+id/ctv_common_free_shipping"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/free_shipping"
                    style="@style/txt_label"/>
                <com.jeil.emarket.components.textview.TextView
                    android:textColor="@color/light"
                    android:id="@+id/ctv_common_shipping_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_3sdp"
                    style="@style/txt_label"/>
            </androidx.appcompat.widget.LinearLayoutCompat>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.jeil.emarket.components.textview.TextView
                    android:layout_width="@dimen/_89sdp"
                    android:layout_height="wrap_content"
                    android:text="@string/urgent_shipping_comma"
                    style="@style/txt_label"/>
                <com.jeil.emarket.components.price.PriceText
                    android:id="@+id/pt_urgent_shipping_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:pt_size="@dimen/font_11_5"
                    app:pt_unit_size="@dimen/font_11_5"/>
                <com.jeil.emarket.components.textview.TextView
                    android:textColor="@color/free"
                    android:id="@+id/ctv_urgent_free_shipping"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/free_shipping"
                    style="@style/txt_label"/>
                <com.jeil.emarket.components.textview.TextView
                    android:textColor="@color/light"
                    android:id="@+id/ctv_urgent_shipping_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_3sdp"
                    style="@style/txt_label"/>
            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </com.balysv.materialripple.MaterialRippleLayout>
    <com.jeil.emarket.components.textview.TextView
        android:id="@+id/ctv_using_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_14sdp"
        android:layout_marginEnd="@dimen/_16sdp"
        style="@style/order_label"/>
    <com.balysv.materialripple.MaterialRippleLayout
        android:layout_gravity="end|bottom"
        android:id="@+id/mrl_delete_zone"
        android:paddingLeft="@dimen/_8sdp"
        android:paddingTop="@dimen/_3sdp"
        android:paddingRight="@dimen/_8sdp"
        android:paddingBottom="@dimen/_3sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:paddingHorizontal="@dimen/_8sdp"
        android:paddingVertical="@dimen/_3sdp"
        app:mrl_rippleRoundedCorners="@dimen/_30sdp"
        style="@style/RippleStyleDark">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/_14sdp"
                android:layout_height="wrap_content"
                android:tint="?attr/colorPrimary"
                android:layout_marginEnd="@dimen/_4sdp"
                app:srcCompat="@drawable/ic_trash"/>
            <com.jeil.emarket.components.textview.TextView
                android:textSize="@dimen/font_11_5"
                android:textColor="?attr/colorPrimary"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/delete"
                app:drawableTint="?attr/colorPrimary"/>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </com.balysv.materialripple.MaterialRippleLayout>
</FrameLayout>
