<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.core.widget.NestedScrollView
        android:id="@+id/nsv_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/main_space"
            android:layout_marginTop="@dimen/main_space"
            android:layout_marginRight="@dimen/main_space"
            android:layout_marginBottom="@dimen/main_space"
            android:layout_marginHorizontal="@dimen/main_space">
            <androidx.appcompat.widget.LinearLayoutCompat
                android:orientation="vertical"
                android:id="@+id/llc_main"
                android:background="@drawable/bg_box"
                android:fitsSystemWindows="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <include
                    android:id="@+id/review_total"
                    layout="@layout/layout_review_total"/>
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:orientation="vertical"
                    android:id="@+id/ll_tab"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <View
                        android:id="@+id/vw_vendor_divider"
                        android:background="@drawable/bg_dotted_line"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_2sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_15sdp"
                        android:layerType="software"/>
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/llc_review_tab"
                        android:paddingLeft="@dimen/_16sdp"
                        android:paddingRight="@dimen/_16sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="@dimen/_16sdp">
                        <com.jeil.emarket.components.button.ButtonToggle
                            android:id="@+id/bt_all"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/_5sdp"
                            app:bt_padding_horizontal="@dimen/_18sdp"
                            app:bt_padding_vertical="@dimen/_9sdp"
                            app:bt_text="@string/all"
                            app:bt_text_color="@color/dark"
                            app:bt_text_size="@dimen/font_10_5"/>
                        <com.jeil.emarket.components.button.ButtonToggle
                            android:id="@+id/bt_rate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawablePadding="@dimen/_5sdp"
                            android:layout_marginEnd="@dimen/_5sdp"
                            app:bt_drawable_color="@color/dark"
                            app:bt_drawable_image="@drawable/ic_angle_down"
                            app:bt_padding_horizontal="@dimen/_18sdp"
                            app:bt_padding_vertical="@dimen/_9sdp"
                            app:bt_text="@string/review_rate_tab"
                            app:bt_text_color="@color/dark"
                            app:bt_text_size="@dimen/font_10_5"/>
                    </androidx.appcompat.widget.LinearLayoutCompat>
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/ll_fragment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="@dimen/_15sdp"/>
                </androidx.appcompat.widget.LinearLayoutCompat>
            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.core.widget.NestedScrollView>
</androidx.appcompat.widget.LinearLayoutCompat>
