<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.appcompat.widget.LinearLayoutCompat
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_12sdp"
        android:layout_marginBottom="@dimen/_10sdp">
        <com.jeil.emarket.components.textview.TextView
            android:textSize="@dimen/font_14"
            android:textColor="@color/dark"
            android:id="@+id/ctv_vendor_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:lineSpacingExtra="@dimen/_8sdp"/>
        <com.jeil.emarket.components.price.PriceText
            android:id="@+id/pt_kpf_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_5sdp"
            app:pt_currency="kpf"
            app:pt_size="@dimen/font_14"
            app:pt_unit_size="@dimen/font_11"/>
        <com.jeil.emarket.components.price.PriceText
            android:id="@+id/pt_kpw_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_5sdp"
            app:pt_currency="kpw"
            app:pt_size="@dimen/font_14"
            app:pt_unit_size="@dimen/font_11"/>
    </androidx.appcompat.widget.LinearLayoutCompat>
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.jeil.emarket.components.button.RadioButton
            android:textSize="@dimen/font_12"
            android:textColor="@color/body"
            android:id="@+id/rb_match"
            android:paddingLeft="@dimen/_5sdp"
            android:paddingRight="@dimen/_5sdp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:checked="true"

            android:text="@string/cash_match_desc"/>
        <com.jeil.emarket.components.button.RadioButton
            android:textSize="@dimen/font_12"
            android:textColor="@color/body"
            android:id="@+id/rb_mismatch"
            android:paddingLeft="@dimen/_5sdp"
            android:paddingRight="@dimen/_5sdp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"

            android:text="@string/cash_mismatch_desc"/>
    </RadioGroup>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/llc_price_box"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp">
        <com.jeil.emarket.components.edittext.EditForm
            android:textSize="@dimen/font_13"
            android:id="@+id/cef_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="@dimen/_10sdp"
            app:ef_placeholder="@string/ready_pay"
            app:ef_type="ef_number"/>
        <com.balysv.materialripple.MaterialRippleLayout
            android:id="@+id/mrl_currency_box"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:mrl_rippleRoundedCorners="@dimen/_3sdp"
            style="@style/RippleStyleDark">
            <androidx.appcompat.widget.LinearLayoutCompat
                android:background="@drawable/bg_input_border"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <com.jeil.emarket.components.textview.TextView
                    android:textSize="@dimen/font_12"
                    android:id="@+id/ctv_currency"
                    android:paddingLeft="@dimen/_13sdp"
                    android:paddingTop="@dimen/_12sdp"
                    android:paddingRight="@dimen/_13sdp"
                    android:paddingBottom="@dimen/_12sdp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/kpw"
                    android:layout_weight="1"/>
                <androidx.appcompat.widget.AppCompatImageView
                    android:theme="@style/Theme.AppCompat"
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/_14sdp"
                    app:srcCompat="@drawable/ic_angle_down"
                    app:tint="@color/light"/>
            </androidx.appcompat.widget.LinearLayoutCompat>
        </com.balysv.materialripple.MaterialRippleLayout>
    </androidx.appcompat.widget.LinearLayoutCompat>
    <com.jeil.emarket.components.button.CustomButton
        android:textSize="@dimen/font_12"
        android:textColor="@color/white"
        android:id="@+id/cb_ok"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:text="@string/payment"
        app:b_color="?attr/colorPrimary"
        app:b_corner_radius="@dimen/_30sdp"/>
</androidx.appcompat.widget.LinearLayoutCompat>
