<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    android:paddingLeft="@dimen/_16sdp"
    android:paddingTop="@dimen/_8sdp"
    android:paddingRight="@dimen/_16sdp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/ll_main_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_5sdp">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.AppCompatImageView
                android:theme="@style/Theme.AppCompat"
                android:id="@+id/iv_order_item_product_img"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_60sdp"
                android:layout_marginEnd="@dimen/_7sdp"/>
            <com.jeil.emarket.components.textview.TextView
                android:textSize="@dimen/font_8_5"
                android:textColor="@color/white"
                android:id="@+id/tv_cancel_item_count"
                android:background="@drawable/bg_input_border"
                android:paddingLeft="@dimen/_8sdp"
                android:paddingTop="@dimen/_4sdp"
                android:paddingRight="@dimen/_8sdp"
                android:paddingBottom="@dimen/_4sdp"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:backgroundTint="@color/light_pink"/>
        </androidx.appcompat.widget.LinearLayoutCompat>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.jeil.emarket.components.textview.TextView
                android:textColor="@color/dark"
                android:id="@+id/tv_item_product_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_8sdp"
                android:lineSpacingExtra="@dimen/_6sdp"
                android:layout_marginStart="@dimen/_8sdp"
                style="@style/txt_info"/>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/ll_product_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_8sdp"
                android:layout_marginStart="@dimen/_8sdp">
                <com.jeil.emarket.components.textview.TextView
                    android:layout_width="@dimen/_93sdp"
                    android:layout_height="wrap_content"
                    android:text="@string/product_id_comma"
                    style="@style/txt_label"/>
                <com.jeil.emarket.components.textview.TextView
                    android:id="@+id/tv_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/txt_info"/>
            </androidx.appcompat.widget.LinearLayoutCompat>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/ll_sku_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_8sdp"
                android:layout_marginStart="@dimen/_8sdp">
                <com.jeil.emarket.components.textview.TextView
                    android:layout_width="@dimen/_93sdp"
                    android:layout_height="wrap_content"
                    android:text="@string/product_sku_comma"
                    style="@style/txt_label"/>
                <com.jeil.emarket.components.textview.TextView
                    android:id="@+id/tv_sku"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/txt_info"/>
            </androidx.appcompat.widget.LinearLayoutCompat>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_8sdp"
                android:layout_marginStart="@dimen/_8sdp">
                <com.jeil.emarket.components.textview.TextView
                    android:layout_width="@dimen/_93sdp"
                    android:layout_height="wrap_content"
                    android:text="@string/quantity_comma"
                    style="@style/txt_label"/>
                <com.jeil.emarket.components.QuantityInput
                    android:id="@+id/cqi_quantity"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:qi_circle_size="@dimen/_24sdp"
                    app:qi_icon_color="@color/dark"
                    app:qi_icon_size="@dimen/_4sdp"
                    app:qi_label_size="@dimen/_13sdp"
                    app:qi_label_width="@dimen/_20sdp"/>
                <com.jeil.emarket.components.textview.TextView
                    android:id="@+id/tv_product_count"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/txt_info"/>
            </androidx.appcompat.widget.LinearLayoutCompat>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:orientation="horizontal"
                android:id="@+id/ll_id_item"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_8sdp"
                android:layout_marginStart="@dimen/_8sdp">
                <com.jeil.emarket.components.textview.TextView
                    android:layout_width="@dimen/_93sdp"
                    android:layout_height="wrap_content"
                    android:text="@string/refund_id"
                    style="@style/txt_label"/>
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.jeil.emarket.components.textview.TextView
                        android:id="@+id/tv_refund_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_5sdp"
                        style="@style/txt_info"/>
                    <com.jeil.emarket.components.textview.TextView
                        android:id="@+id/tv_created_at"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/txt_info"/>
                </androidx.appcompat.widget.LinearLayoutCompat>
            </androidx.appcompat.widget.LinearLayoutCompat>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:gravity="center_vertical"
                android:id="@+id/ll_refund_price_item"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_8sdp"
                android:layout_marginStart="@dimen/_8sdp">
                <com.jeil.emarket.components.textview.TextView
                    android:id="@+id/tv_label"
                    android:layout_width="@dimen/_93sdp"
                    android:layout_height="wrap_content"
                    android:text="@string/return_price_comma"
                    style="@style/txt_label"/>
                <com.jeil.emarket.components.price.PriceText
                    android:id="@+id/pt_refund_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:pt_size="@dimen/font_13"
                    app:pt_unit_size="@dimen/font_11"/>
            </androidx.appcompat.widget.LinearLayoutCompat>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:gravity="center_vertical"
                android:id="@+id/ll_item_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-2dp"
                android:layout_marginBottom="@dimen/_6sdp"
                android:layout_marginStart="@dimen/_8sdp">
                <com.jeil.emarket.components.textview.TextView
                    android:layout_width="@dimen/_93sdp"
                    android:layout_height="wrap_content"
                    android:text="@string/price_comma"
                    style="@style/txt_label"/>
                <com.jeil.emarket.components.price.ProductPrice
                    android:id="@+id/pt_item_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:pp_priceSize="14"/>
            </androidx.appcompat.widget.LinearLayoutCompat>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:gravity="center_vertical"
                android:id="@+id/ll_sell_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_6sdp"
                android:layout_marginStart="@dimen/_8sdp">
                <com.jeil.emarket.components.textview.TextView
                    android:layout_width="@dimen/_93sdp"
                    android:layout_height="wrap_content"
                    android:text="@string/sell_price_comma"
                    style="@style/txt_label"/>
                <com.jeil.emarket.components.price.PriceText
                    android:id="@+id/pt_sell_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:pt_size="@dimen/font_13"
                    app:pt_unit_size="@dimen/font_10_5"/>
            </androidx.appcompat.widget.LinearLayoutCompat>
            <com.jeil.emarket.components.ActionLink
                android:id="@+id/cal_show_refund_reason"
                android:paddingLeft="@dimen/_8sdp"
                android:paddingTop="@dimen/_5sdp"
                android:paddingRight="@dimen/_8sdp"
                android:paddingBottom="@dimen/_5sdp"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:al_distance="@dimen/_3sdp"
                app:al_drawable="@drawable/ic_angle_right"
                app:al_drawable_color="?attr/colorPrimary"
                app:al_drawable_size="@dimen/_13sdp"
                app:al_drawable_start="false"
                app:al_text="@string/show_refund_reason"
                app:al_text_color="?attr/colorPrimary"
                app:al_text_size="@dimen/font_11_5"
                app:mrl_rippleRoundedCorners="@dimen/_30sdp"
                style="@style/RippleStyleDark"/>
            <com.jeil.emarket.components.textview.TextView
                android:textSize="@dimen/font_11_5"
                android:textColor="@color/dark"
                android:id="@+id/tv_refund_reason"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_marginStart="@dimen/_8sdp"/>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.appcompat.widget.LinearLayoutCompat>
    <View
        android:id="@+id/v_item_border"
        android:background="@drawable/bg_dotted_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_2sdp"
        android:layout_marginBottom="@dimen/_4sdp"
        android:layerType="software"/>
</androidx.appcompat.widget.LinearLayoutCompat>
