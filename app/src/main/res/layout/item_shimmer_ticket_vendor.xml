<?xml version="1.0" encoding="utf-8"?>
<com.balysv.materialripple.MaterialRippleLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mrl_ticket_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/main_space"
    android:layout_marginRight="@dimen/main_space"
    app:mrl_rippleRoundedCorners="@dimen/_7sdp"
    style="@style/RippleStyleDark">
    <androidx.appcompat.widget.LinearLayoutCompat
        android:background="@drawable/bg_box"
        android:paddingLeft="@dimen/_10sdp"
        android:paddingTop="@dimen/_10sdp"
        android:paddingRight="@dimen/_10sdp"
        android:paddingBottom="@dimen/_8sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.facebook.shimmer.ShimmerFrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/shimmer_default">
            <androidx.appcompat.widget.LinearLayoutCompat
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:gravity="center"
                    android:orientation="vertical"
                    android:id="@+id/llc_shimmer_user_avatar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_10sdp">
                    <View
                        android:background="@drawable/bd_grey_ellipse"
                        android:layout_width="@dimen/_45sdp"
                        android:layout_height="@dimen/_45sdp"
                        android:backgroundTint="@color/grey_bg"/>
                    <com.jeil.emarket.components.textview.TextView
                        android:textSize="@dimen/font_11_5"
                        android:textColor="@color/transparent"
                        android:id="@+id/tv_user_name"
                        android:background="@drawable/bd_grey_ellipse"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:text="@string/shimmer_ticket_target"/>
                </androidx.appcompat.widget.LinearLayoutCompat>
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.google.android.material.chip.ChipGroup
                        android:orientation="vertical"
                        android:paddingTop="@dimen/_6sdp"
                        android:paddingBottom="@dimen/_6sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_5sdp"
                        app:chipSpacingHorizontal="@dimen/_5sdp"
                        app:chipSpacingVertical="@dimen/_5sdp">
                        <com.jeil.emarket.components.textview.TextView
                            android:textSize="@dimen/font_8_5"
                            android:textColor="@color/transparent"
                            android:id="@+id/tv_status_badge"
                            android:background="@drawable/bd_grey_ellipse"
                            android:paddingLeft="@dimen/_8sdp"
                            android:paddingTop="@dimen/_3_5sdp"
                            android:paddingRight="@dimen/_8sdp"
                            android:paddingBottom="@dimen/_3_5sdp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/completed"
                            android:backgroundTint="@color/grey_bg"/>
                        <com.jeil.emarket.components.textview.TextView
                            android:textSize="@dimen/font_8_5"
                            android:textColor="@color/transparent"
                            android:gravity="center"
                            android:id="@+id/tv_category_name"
                            android:background="@drawable/bd_grey_ellipse"
                            android:paddingLeft="@dimen/_14sdp"
                            android:paddingTop="@dimen/_3_5sdp"
                            android:paddingRight="@dimen/_14sdp"
                            android:paddingBottom="@dimen/_3_5sdp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/shimmer_ticket_theme"
                            android:backgroundTint="@color/grey_bg"/>
                        <com.jeil.emarket.components.textview.TextView
                            android:textSize="@dimen/font_8_5"
                            android:textColor="@color/transparent"
                            android:gravity="center"
                            android:id="@+id/tv_shimmer_vendor_name"
                            android:background="@drawable/bd_grey_ellipse"
                            android:paddingLeft="@dimen/_15sdp"
                            android:paddingTop="@dimen/_3_5sdp"
                            android:paddingRight="@dimen/_15sdp"
                            android:paddingBottom="@dimen/_3_5sdp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/shimmer_ticket_target"
                            android:backgroundTint="@color/grey_bg"/>
                        <com.jeil.emarket.components.textview.TextView
                            android:textSize="@dimen/font_8_5"
                            android:textColor="@color/transparent"
                            android:gravity="center"
                            android:id="@+id/tv_updated_at"
                            android:background="@drawable/bd_grey_ellipse"
                            android:paddingLeft="@dimen/_15sdp"
                            android:paddingTop="@dimen/_3_5sdp"
                            android:paddingRight="@dimen/_15sdp"
                            android:paddingBottom="@dimen/_3_5sdp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/shimmer_date"
                            android:backgroundTint="@color/grey_bg"/>
                    </com.google.android.material.chip.ChipGroup>
                    <com.jeil.emarket.components.textview.TextView
                        android:textSize="@dimen/font_11_5"
                        android:id="@+id/tv_message"
                        android:background="@drawable/bd_grey_ellipse"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_4sdp"/>
                </androidx.appcompat.widget.LinearLayoutCompat>
            </androidx.appcompat.widget.LinearLayoutCompat>
        </com.facebook.shimmer.ShimmerFrameLayout>
    </androidx.appcompat.widget.LinearLayoutCompat>
</com.balysv.materialripple.MaterialRippleLayout>
