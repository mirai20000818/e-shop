<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:elevation="@dimen/_0sdp">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:orientation="vertical"
            android:id="@+id/ll_header_tabs"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_scrollFlags="scroll">
            <include layout="@layout/layout_top_bar_vendor"/>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </com.google.android.material.appbar.AppBarLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/main_space"
        android:layout_marginRight="@dimen/main_space"
        android:layout_weight="1"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">
        <androidx.core.widget.NestedScrollView
            android:id="@+id/nsv_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.LinearLayoutCompat
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:orientation="vertical"
                    android:background="@drawable/bg_box"
                    android:paddingLeft="@dimen/_18sdp"
                    android:paddingTop="@dimen/_20sdp"
                    android:paddingRight="@dimen/_18sdp"
                    android:paddingBottom="@dimen/_20sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/main_space"
                    android:layout_marginBottom="@dimen/main_space">
                    <androidx.appcompat.widget.AppCompatImageView
                        android:theme="@style/Theme.AppCompat"
                        android:id="@+id/aiv_product_image"
                        android:layout_width="@dimen/_300sdp"
                        android:layout_height="@dimen/_300sdp"
                        app:srcCompat="@drawable/ic_placeholder"/>
                    <View
                        android:background="@drawable/bg_dotted_line"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_2sdp"
                        android:layout_marginTop="@dimen/_18sdp"
                        android:layout_marginBottom="@dimen/_18sdp"
                        android:layerType="software"/>
                    <com.jeil.emarket.components.textview.TextView
                        android:textSize="@dimen/font_13_5"
                        android:textColor="@color/dark"
                        android:id="@+id/ctv_product_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:lineSpacingExtra="@dimen/_7sdp"/>
                </androidx.appcompat.widget.LinearLayoutCompat>
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:orientation="vertical"
                    android:background="@drawable/bg_box"
                    android:paddingBottom="@dimen/_13sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/main_space">
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/_16sdp"
                        android:paddingRight="@dimen/_16sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_18sdp"
                        android:layout_marginBottom="@dimen/_18sdp">
                        <com.jeil.emarket.components.CircleImageView
                            android:id="@+id/iv_avatar"
                            android:layout_width="@dimen/_54sdp"
                            android:layout_height="@dimen/_54sdp"
                            android:src="@drawable/man"
                            android:layout_marginEnd="@dimen/_12sdp"/>
                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <androidx.appcompat.widget.LinearLayoutCompat
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/_8sdp">
                                <com.jeil.emarket.components.textview.TextView
                                    android:textSize="@dimen/font_11_5"
                                    android:textColor="@color/dark"
                                    android:id="@+id/tv_username"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="@dimen/_12sdp"/>
                                <com.jeil.emarket.components.textview.TextView
                                    android:textSize="@dimen/font_11_5"
                                    android:textColor="@color/light"
                                    android:id="@+id/tv_review_date"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                            </androidx.appcompat.widget.LinearLayoutCompat>
                            <ProgressBar
                                android:id="@+id/pb_rating"
                                android:layout_width="80dp"
                                android:layout_height="@dimen/_13sdp"
                                android:indeterminate="false"
                                android:progressDrawable="@drawable/bg_progress_rating"
                                style="@style/Widget.AppCompat.ProgressBar.Horizontal"/>
                        </androidx.appcompat.widget.LinearLayoutCompat>
                    </androidx.appcompat.widget.LinearLayoutCompat>
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/ri_product_item"
                        android:paddingLeft="@dimen/_16sdp"
                        android:paddingRight="@dimen/_16sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_10sdp">
                        <com.jeil.emarket.components.textview.TextView
                            android:layout_width="@dimen/_65sdp"
                            android:layout_height="wrap_content"
                            android:text="@string/item_quantity"
                            style="@style/txt_label"/>
                        <com.jeil.emarket.components.textview.TextView
                            android:id="@+id/ctv_item_quantityd"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/txt_info"/>
                    </androidx.appcompat.widget.LinearLayoutCompat>
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:gravity="center_vertical"
                        android:id="@+id/llc_vendor_item"
                        android:paddingLeft="@dimen/_16sdp"
                        android:paddingRight="@dimen/_16sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_15sdp">
                        <com.jeil.emarket.components.textview.TextView
                            android:layout_width="@dimen/_65sdp"
                            android:layout_height="wrap_content"
                            android:text="@string/payment_amount"
                            style="@style/txt_label"/>
                        <com.jeil.emarket.components.price.PriceText
                            android:id="@+id/pt_order_total"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:pt_size="@dimen/font_14"
                            app:pt_unit_size="@dimen/font_11_5"/>
                    </androidx.appcompat.widget.LinearLayoutCompat>
                    <com.jeil.emarket.components.textview.TextView
                        android:textSize="@dimen/font_11_5"
                        android:id="@+id/tv_review_content"
                        android:paddingLeft="@dimen/_16sdp"
                        android:paddingRight="@dimen/_16sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_16sdp"
                        android:lineSpacingExtra="@dimen/_10sdp"/>
                    <com.jeil.emarket.components.ActionLink
                        android:id="@+id/cal_review_votes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:layout_marginStart="@dimen/_16sdp"
                        app:al_distance="@dimen/_5sdp"
                        app:al_drawable="@drawable/ic_thumb_up"
                        app:al_drawable_size="@dimen/_18sdp"
                        app:al_drawable_start="true"
                        app:al_rippleAlpha="0"
                        app:al_text="@string/edit"
                        app:al_text_color="?attr/colorPrimary"
                        app:al_text_size="@dimen/font_13"/>
                </androidx.appcompat.widget.LinearLayoutCompat>
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:orientation="vertical"
                    android:background="@drawable/bg_box"
                    android:paddingTop="@dimen/_16sdp"
                    android:paddingBottom="@dimen/_16sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.jeil.emarket.components.textview.TextView
                        android:textSize="@dimen/font_11_5"
                        android:textColor="@color/danger"
                        android:id="@+id/ctv_rejected_reason"
                        android:background="@drawable/bd_notice"
                        android:padding="@dimen/_14sdp"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_16sdp"
                        android:layout_marginTop="@dimen/_7sdp"
                        android:layout_marginRight="@dimen/_16sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:lineSpacingExtra="@dimen/_10sdp"/>
                    <com.jeil.emarket.components.edittext.EditText
                        android:textSize="@dimen/font_11_5"
                        android:textColor="@color/body"
                        android:textColorHint="@color/light"
                        android:gravity="top"
                        android:id="@+id/cet_reply_text"
                        android:background="@drawable/bd_textarea"
                        android:padding="@dimen/_14sdp"
                        android:scrollbars="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_16sdp"
                        android:layout_marginRight="@dimen/_16sdp"
                        android:layout_marginBottom="@dimen/_8sdp"
                        android:minHeight="@dimen/_200sdp"
                        android:hint="@string/reply_placeholder"
                        android:minLines="6"
                        android:lineSpacingExtra="@dimen/_8sdp"/>
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <com.balysv.materialripple.MaterialRippleLayout
                            android:id="@+id/mrl_help"
                            android:padding="@dimen/_10sdp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_6sdp"
                            android:layout_marginRight="@dimen/_6sdp"
                            app:mrl_rippleRoundedCorners="@dimen/_30sdp"
                            style="@style/RippleStyleDark">
                            <androidx.appcompat.widget.LinearLayoutCompat
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <androidx.appcompat.widget.AppCompatImageView
                                    android:theme="@style/Theme.AppCompat"
                                    android:layout_width="@dimen/_15sdp"
                                    android:layout_height="@dimen/_15sdp"
                                    android:tint="@color/dark"
                                    android:layout_marginEnd="@dimen/_6sdp"
                                    app:srcCompat="@drawable/ic_help"/>
                                <com.jeil.emarket.components.textview.TextView
                                    android:textSize="@dimen/font_11_5"
                                    android:textColor="@color/dark"
                                    android:gravity="center_vertical"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:text="@string/reply_notice"/>
                            </androidx.appcompat.widget.LinearLayoutCompat>
                        </com.balysv.materialripple.MaterialRippleLayout>
                    </androidx.appcompat.widget.LinearLayoutCompat>
                </androidx.appcompat.widget.LinearLayoutCompat>
            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.core.widget.NestedScrollView>
    </RelativeLayout>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_gravity="bottom"
        android:background="@color/grey"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior=".behaviors.BottomViewBehavior">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:gravity="center_vertical"
            android:id="@+id/ll_footer"
            android:paddingLeft="@dimen/main_space"
            android:paddingTop="@dimen/_7sdp"
            android:paddingRight="@dimen/main_space"
            android:paddingBottom="@dimen/_5sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.jeil.emarket.components.button.CustomButton
                android:textSize="@dimen/font_11_5"
                android:textColor="@color/dark"
                android:id="@+id/cb_cancel"
                android:paddingLeft="@dimen/_0sdp"
                android:paddingTop="@dimen/_13sdp"
                android:paddingRight="@dimen/_0sdp"
                android:paddingBottom="@dimen/_13sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cancel"
                android:layout_weight="1"
                android:layout_marginEnd="@dimen/_5sdp"
                android:letterSpacing="0"
                app:b_color="@color/white"
                app:b_corner_radius="@dimen/_30sdp"/>
            <com.balysv.materialripple.MaterialRippleLayout
                android:id="@+id/mrl_delete"
                android:background="@drawable/bg_white_circle"
                android:padding="@dimen/_12sdp"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:mrl_rippleRoundedCorners="@dimen/_20sdp"
                style="@style/RippleStyleDark">
                <androidx.appcompat.widget.AppCompatImageView
                    android:theme="@style/Theme.AppCompat"
                    android:layout_width="@dimen/_18sdp"
                    android:layout_height="@dimen/_18sdp"
                    android:scaleType="fitXY"
                    android:tint="@color/dark"
                    app:srcCompat="@drawable/ic_trash"/>
            </com.balysv.materialripple.MaterialRippleLayout>
            <com.jeil.emarket.components.button.CustomButton
                android:textSize="@dimen/font_11_5"
                android:textColor="@color/white"
                android:id="@+id/cb_publish"
                android:paddingLeft="@dimen/_0sdp"
                android:paddingTop="@dimen/_13sdp"
                android:paddingRight="@dimen/_0sdp"
                android:paddingBottom="@dimen/_13sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/action_ok"
                android:layout_weight="1"
                android:layout_marginStart="@dimen/_5sdp"
                android:letterSpacing="0"
                app:b_color="?attr/colorPrimary"
                app:b_corner_radius="@dimen/_30sdp"/>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
