<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/ll_dialog"
    android:paddingLeft="@dimen/_15sdp"
    android:paddingTop="@dimen/_20sdp"
    android:paddingRight="@dimen/_15sdp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <FrameLayout
            android:layout_width="@dimen/_23sdp"
            android:layout_height="@dimen/_23sdp"
            android:layout_marginEnd="@dimen/_7sdp">
            <androidx.appcompat.widget.AppCompatImageView
                android:theme="@style/Theme.AppCompat"
                android:paddingTop="@dimen/_4sdp"
                android:paddingBottom="@dimen/_4sdp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingStart="@dimen/_3_5sdp"
                app:srcCompat="@drawable/updating_icon"/>
            <androidx.appcompat.widget.AppCompatImageView
                android:theme="@style/Theme.AppCompat"
                android:id="@+id/iv_rotate"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/updating_back"/>
        </FrameLayout>
        <com.jeil.emarket.components.textview.TextView
            android:textSize="@dimen/font_13"
            android:textColor="@color/dark"
            android:id="@+id/tv_updating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/updating_database"
            android:lineSpacingExtra="@dimen/_6sdp"/>
        <com.jeil.emarket.components.textview.TextView
            android:textSize="@dimen/font_13"
            android:textColor="@color/dark"
            android:id="@+id/tv_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(0%)"
            android:lineSpacingExtra="@dimen/_6sdp"
            android:layout_marginStart="@dimen/_5sdp"/>
        <com.jeil.emarket.components.textview.TextView
            android:textSize="@dimen/font_13"
            android:gravity="end"
            android:id="@+id/tv_capacity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="@dimen/_6sdp"
            android:layout_marginStart="@dimen/_10sdp"/>
    </androidx.appcompat.widget.LinearLayoutCompat>
    <ProgressBar
        android:id="@+id/pb_progress"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_7sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:progress="0"
        android:progressDrawable="@drawable/bg_progress_gradient"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"/>
</androidx.appcompat.widget.LinearLayoutCompat>
