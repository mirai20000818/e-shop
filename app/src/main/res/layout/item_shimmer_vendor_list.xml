<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fl_vendor_list"
    android:background="@drawable/bg_box"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/main_space"
    android:layout_marginRight="@dimen/main_space">
    <com.facebook.shimmer.ShimmerFrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/shimmer_default">
        <com.balysv.materialripple.MaterialRippleLayout
            android:id="@+id/mrl_vendor_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:mrl_rippleRoundedCorners="@dimen/_7sdp"
            style="@style/RippleStyleDark">
            <androidx.appcompat.widget.LinearLayoutCompat
                android:gravity="start|center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_10sdp"
                    app:cardCornerRadius="@dimen/_5sdp"
                    app:cardElevation="@dimen/_0sdp">
                    <View
                        android:id="@+id/iv_vendor_card"
                        android:background="@drawable/bg_box"
                        android:layout_width="@dimen/_125sdp"
                        android:layout_height="@dimen/_97sdp"
                        android:scaleType="fitXY"
                        android:backgroundTint="@color/grey_bg"/>
                </androidx.cardview.widget.CardView>
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/_3sdp">
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_7sdp">
                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="@dimen/font_72"
                            android:layout_height="wrap_content">
                            <com.jeil.emarket.components.textview.TextView
                                android:textSize="@dimen/font_11"
                                android:textColor="@color/transparent"
                                android:background="@drawable/bg_grey_round"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/vendor_rating"
                                style="@style/txt_label"/>
                        </androidx.appcompat.widget.LinearLayoutCompat>
                        <com.jeil.emarket.components.textview.TextView
                            android:textColor="@color/transparent"
                            android:background="@drawable/bg_grey_round"
                            android:layout_width="@dimen/_60sdp"
                            android:layout_height="wrap_content"
                            style="@style/txt_label"/>
                    </androidx.appcompat.widget.LinearLayoutCompat>
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/ll_vendor_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_7sdp">
                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="@dimen/font_72"
                            android:layout_height="wrap_content">
                            <com.jeil.emarket.components.textview.TextView
                                android:textSize="@dimen/font_11"
                                android:textColor="@color/transparent"
                                android:background="@drawable/bg_grey_round"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/vendor_name_comma"
                                style="@style/txt_label"/>
                        </androidx.appcompat.widget.LinearLayoutCompat>
                        <com.jeil.emarket.components.textview.TextView
                            android:textColor="@color/transparent"
                            android:background="@drawable/bg_grey_round"
                            android:layout_width="@dimen/_80sdp"
                            android:layout_height="wrap_content"
                            style="@style/txt_label"/>
                    </androidx.appcompat.widget.LinearLayoutCompat>
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/ll_enter_year"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_7sdp">
                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="@dimen/font_72"
                            android:layout_height="wrap_content">
                            <com.jeil.emarket.components.textview.TextView
                                android:textSize="@dimen/font_11"
                                android:textColor="@color/transparent"
                                android:background="@drawable/bg_grey_round"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/enter_years"
                                style="@style/txt_label"/>
                        </androidx.appcompat.widget.LinearLayoutCompat>
                        <com.jeil.emarket.components.textview.TextView
                            android:textColor="@color/transparent"
                            android:background="@drawable/bg_grey_round"
                            android:layout_width="@dimen/_50sdp"
                            android:layout_height="wrap_content"
                            style="@style/txt_label"/>
                    </androidx.appcompat.widget.LinearLayoutCompat>
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/ll_products_count"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="@dimen/font_72"
                            android:layout_height="wrap_content">
                            <com.jeil.emarket.components.textview.TextView
                                android:textSize="@dimen/font_11"
                                android:textColor="@color/transparent"
                                android:background="@drawable/bg_grey_round"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/product_count_comma"
                                style="@style/txt_label"/>
                        </androidx.appcompat.widget.LinearLayoutCompat>
                        <com.jeil.emarket.components.textview.TextView
                            android:textColor="@color/transparent"
                            android:background="@drawable/bg_grey_round"
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="wrap_content"
                            style="@style/txt_label"/>
                    </androidx.appcompat.widget.LinearLayoutCompat>
                </androidx.appcompat.widget.LinearLayoutCompat>
            </androidx.appcompat.widget.LinearLayoutCompat>
        </com.balysv.materialripple.MaterialRippleLayout>
        <com.balysv.materialripple.MaterialRippleLayout
            android:layout_gravity="end|bottom"
            android:id="@+id/mrl_add_to_wishlist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_18sdp"
            android:layout_marginEnd="@dimen/_16sdp"
            style="@style/RippleStyleDark">
            <View
                android:id="@+id/iv_wishlist"
                android:background="@drawable/bg_box"
                android:layout_width="19.5dp"
                android:layout_height="19.5dp"
                android:scaleType="fitXY"
                android:backgroundTint="@color/grey_bg"
                app:srcCompat="@drawable/ic_wishlist_empty"/>
        </com.balysv.materialripple.MaterialRippleLayout>
    </com.facebook.shimmer.ShimmerFrameLayout>
</androidx.appcompat.widget.LinearLayoutCompat>
