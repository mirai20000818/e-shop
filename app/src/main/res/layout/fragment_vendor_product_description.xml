<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/grey"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.core.widget.NestedScrollView
        android:id="@+id/nsv_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.LinearLayoutCompat
                android:orientation="vertical"
                android:padding="@dimen/main_space"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:orientation="vertical"
                    android:id="@+id/llc_shimmer_product_image_section"
                    android:background="@drawable/bg_box"
                    android:paddingTop="@dimen/_15sdp"
                    android:paddingBottom="@dimen/_18sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/main_space">
                    <com.facebook.shimmer.ShimmerFrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/shimmer_default">
                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_15sdp"
                            android:layout_marginRight="@dimen/_15sdp">
                            <View
                                android:id="@+id/vp_shimmer_images"
                                android:background="@color/grey_bg"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"/>
                            <View
                                android:background="@drawable/bg_dotted_line"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_2sdp"
                                android:layout_marginLeft="@dimen/main_space"
                                android:layout_marginTop="@dimen/mid_space"
                                android:layout_marginRight="@dimen/main_space"
                                android:layout_marginBottom="@dimen/mid_space"
                                android:layerType="software"/>
                            <androidx.appcompat.widget.LinearLayoutCompat
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_7sdp"
                                android:layout_marginBottom="@dimen/_3sdp">
                                <com.jeil.emarket.components.textview.TextView
                                    android:textSize="@dimen/font_13_5"
                                    android:textColor="@color/dark"
                                    android:background="@drawable/bg_grey_round"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_3sdp"
                                    android:layout_marginBottom="@dimen/_5sdp"/>
                                <androidx.appcompat.widget.LinearLayoutCompat
                                    android:gravity="start|center_vertical"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_4sdp">
                                    <ProgressBar
                                        android:layout_width="72dp"
                                        android:layout_height="@dimen/_12sdp"
                                        android:indeterminate="false"
                                        android:progressDrawable="@drawable/bg_progress_rating"
                                        android:layout_marginEnd="@dimen/_5sdp"
                                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"/>
                                    <com.jeil.emarket.components.textview.TextView
                                        android:textSize="@dimen/font_12"
                                        android:textColor="@color/transparent"
                                        android:background="@drawable/bg_grey_round"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/zero_review"/>
                                </androidx.appcompat.widget.LinearLayoutCompat>
                            </androidx.appcompat.widget.LinearLayoutCompat>
                        </androidx.appcompat.widget.LinearLayoutCompat>
                    </com.facebook.shimmer.ShimmerFrameLayout>
                </androidx.appcompat.widget.LinearLayoutCompat>
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:orientation="vertical"
                    android:id="@+id/llc_product_image_box"
                    android:background="@drawable/bg_box"
                    android:paddingTop="@dimen/_15sdp"
                    android:paddingBottom="@dimen/_18sdp"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/main_space">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_15sdp"
                        android:layout_marginRight="@dimen/_15sdp">
                        <com.jeil.emarket.components.viewpager.LoopViewPager
                            android:id="@+id/vp_images"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                        <com.jeil.emarket.components.viewpager.CircleIndicator
                            android:gravity="center"
                            android:id="@+id/ci_images"
                            android:paddingBottom="@dimen/_12sdp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            app:ci_drawable="@drawable/ic_indicator_active_lg"
                            app:ci_drawable_unselected="@drawable/ic_indicator_lg"
                            app:ci_height="@dimen/_18sdp"
                            app:ci_margin="@dimen/_3sdp"
                            app:ci_width="@dimen/_18sdp"/>
                    </RelativeLayout>
                    <View
                        android:background="@drawable/bg_dotted_line"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_2sdp"
                        android:layout_marginLeft="@dimen/main_space"
                        android:layout_marginTop="@dimen/mid_space"
                        android:layout_marginRight="@dimen/main_space"
                        android:layout_marginBottom="@dimen/mid_space"
                        android:layerType="software"/>
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_7sdp"
                        android:layout_marginBottom="@dimen/_3sdp"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_15sdp">
                        <com.jeil.emarket.components.textview.TextView
                            android:textSize="@dimen/font_13_5"
                            android:textColor="@color/dark"
                            android:id="@+id/tv_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:lineSpacingExtra="@dimen/_7sdp"
                            android:layout_marginStart="@dimen/_10sdp"/>
                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:gravity="start|center_vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_4sdp"
                            android:layout_marginStart="@dimen/_10sdp">
                            <ProgressBar
                                android:id="@+id/pb_rating"
                                android:layout_width="72dp"
                                android:layout_height="@dimen/_12sdp"
                                android:indeterminate="false"
                                android:progressDrawable="@drawable/bg_progress_rating"
                                android:layout_marginEnd="@dimen/_5sdp"
                                style="@style/Widget.AppCompat.ProgressBar.Horizontal"/>
                            <com.jeil.emarket.components.textview.TextView
                                android:textSize="@dimen/font_12"
                                android:textColor="@color/light"
                                android:id="@+id/tv_reviews"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/zero_review"/>
                        </androidx.appcompat.widget.LinearLayoutCompat>
                    </androidx.appcompat.widget.LinearLayoutCompat>
                </androidx.appcompat.widget.LinearLayoutCompat>
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:background="@drawable/bg_box"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/main_space">
                    <com.facebook.shimmer.ShimmerFrameLayout
                        android:id="@+id/sfl_product_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/shimmer_default">
                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:orientation="vertical"
                            android:paddingTop="@dimen/_16sdp"
                            android:paddingBottom="@dimen/_16sdp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <com.jeil.emarket.components.product.ProductAttributeSwatch
                                android:id="@+id/pa_attributes"
                                android:paddingLeft="@dimen/_12sdp"
                                android:paddingRight="@dimen/_12sdp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                            <View
                                android:id="@+id/v_attribute_border"
                                android:background="@drawable/bg_dotted_line"
                                android:visibility="gone"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_2sdp"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:layout_marginBottom="@dimen/_10sdp"
                                android:layerType="software"/>
                            <androidx.appcompat.widget.LinearLayoutCompat
                                android:orientation="vertical"
                                android:id="@+id/llc_product_price"
                                android:visibility="gone"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <androidx.appcompat.widget.LinearLayoutCompat
                                    android:paddingLeft="@dimen/_16sdp"
                                    android:paddingRight="@dimen/_16sdp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:layout_marginBottom="@dimen/_5sdp">
                                    <com.jeil.emarket.components.textview.TextView
                                        android:layout_width="@dimen/_77sdp"
                                        android:layout_height="wrap_content"
                                        android:text="@string/regular_price_comma"
                                        android:layout_marginEnd="@dimen/_4sdp"
                                        style="@style/txt_label"/>
                                    <com.jeil.emarket.components.price.PriceText
                                        android:id="@+id/pt_regular_price"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        app:pt_size="@dimen/font_13"
                                        app:pt_unit_size="@dimen/font_11"/>
                                </androidx.appcompat.widget.LinearLayoutCompat>
                                <androidx.appcompat.widget.LinearLayoutCompat
                                    android:paddingLeft="@dimen/_16sdp"
                                    android:paddingRight="@dimen/_16sdp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:layout_marginBottom="@dimen/_5sdp">
                                    <com.jeil.emarket.components.textview.TextView
                                        android:layout_width="@dimen/_77sdp"
                                        android:layout_height="wrap_content"
                                        android:text="@string/sale_price_comma"
                                        android:layout_marginEnd="@dimen/_4sdp"
                                        style="@style/txt_label"/>
                                    <com.jeil.emarket.components.price.PriceText
                                        android:id="@+id/pt_sale_price"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        app:pt_size="@dimen/font_13"
                                        app:pt_unit_size="@dimen/font_11"/>
                                </androidx.appcompat.widget.LinearLayoutCompat>
                                <androidx.appcompat.widget.LinearLayoutCompat
                                    android:paddingLeft="@dimen/_16sdp"
                                    android:paddingRight="@dimen/_16sdp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:layout_marginBottom="@dimen/_5sdp">
                                    <com.jeil.emarket.components.textview.TextView
                                        android:layout_width="@dimen/_77sdp"
                                        android:layout_height="wrap_content"
                                        android:text="@string/stock_comma"
                                        android:layout_marginEnd="@dimen/_4sdp"
                                        style="@style/txt_label"/>
                                    <com.jeil.emarket.components.textview.TextView
                                        android:id="@+id/ctv_stock"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        style="@style/txt_info"/>
                                    <com.jeil.emarket.components.textview.TextView
                                        android:textSize="@dimen/font_11_5"
                                        android:textColor="@color/kpf"
                                        android:id="@+id/ctv_out_of_stock"
                                        android:visibility="gone"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:text="@string/empty_stock"/>
                                </androidx.appcompat.widget.LinearLayoutCompat>
                                <View
                                    android:background="@drawable/bg_dotted_line"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_2sdp"
                                    android:layout_marginTop="@dimen/_10sdp"
                                    android:layout_marginBottom="@dimen/_10sdp"
                                    android:layerType="software"/>
                            </androidx.appcompat.widget.LinearLayoutCompat>
                            <androidx.appcompat.widget.LinearLayoutCompat
                                android:orientation="vertical"
                                android:id="@+id/llc_price_info"
                                android:paddingLeft="@dimen/_16sdp"
                                android:paddingRight="@dimen/_16sdp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <androidx.appcompat.widget.LinearLayoutCompat
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:layout_marginBottom="@dimen/_5sdp">
                                    <androidx.appcompat.widget.LinearLayoutCompat
                                        android:layout_width="@dimen/_85sdp"
                                        android:layout_height="wrap_content"
                                        android:layout_marginEnd="@dimen/_4sdp">
                                        <com.jeil.emarket.components.textview.TextView
                                            android:textColor="@color/transparent"
                                            android:id="@+id/ctv_price_approved_no_label"
                                            android:background="@drawable/bg_grey_round"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="@string/price_approved_no_comma"
                                            style="@style/txt_label"/>
                                    </androidx.appcompat.widget.LinearLayoutCompat>
                                    <com.jeil.emarket.components.textview.TextView
                                        android:textColor="@color/transparent"
                                        android:id="@+id/ctv_price_approved_no"
                                        android:background="@drawable/bg_grey_round"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/shimmer_price_approved_no_comma"
                                        style="@style/txt_info"/>
                                </androidx.appcompat.widget.LinearLayoutCompat>
                                <androidx.appcompat.widget.LinearLayoutCompat
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:layout_marginBottom="@dimen/_5sdp">
                                    <androidx.appcompat.widget.LinearLayoutCompat
                                        android:layout_width="@dimen/_85sdp"
                                        android:layout_height="wrap_content"
                                        android:layout_marginEnd="@dimen/_4sdp">
                                        <com.jeil.emarket.components.textview.TextView
                                            android:textColor="@color/transparent"
                                            android:id="@+id/ctv_price_no_label"
                                            android:background="@drawable/bg_grey_round"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="@string/price_no_comma"
                                            style="@style/txt_label"/>
                                    </androidx.appcompat.widget.LinearLayoutCompat>
                                    <com.jeil.emarket.components.textview.TextView
                                        android:textColor="@color/transparent"
                                        android:id="@+id/ctv_price_no"
                                        android:background="@drawable/bg_grey_round"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/shimmer_price_approved_no_comma"
                                        style="@style/txt_info"/>
                                </androidx.appcompat.widget.LinearLayoutCompat>
                                <androidx.appcompat.widget.LinearLayoutCompat
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:layout_marginBottom="@dimen/_5sdp">
                                    <androidx.appcompat.widget.LinearLayoutCompat
                                        android:layout_width="@dimen/_85sdp"
                                        android:layout_height="wrap_content"
                                        android:layout_marginEnd="@dimen/_4sdp">
                                        <com.jeil.emarket.components.textview.TextView
                                            android:textColor="@color/transparent"
                                            android:id="@+id/ctv_price_approved_at_label"
                                            android:background="@drawable/bg_grey_round"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="@string/price_approved_at_comma"
                                            style="@style/txt_label"/>
                                    </androidx.appcompat.widget.LinearLayoutCompat>
                                    <com.jeil.emarket.components.textview.TextView
                                        android:textColor="@color/transparent"
                                        android:id="@+id/ctv_price_approved_at"
                                        android:background="@drawable/bg_grey_round"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/shimmer_date"
                                        style="@style/txt_info"/>
                                </androidx.appcompat.widget.LinearLayoutCompat>
                            </androidx.appcompat.widget.LinearLayoutCompat>
                            <View
                                android:id="@+id/v_price_info_border"
                                android:background="@drawable/bg_dotted_line"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_2sdp"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:layout_marginBottom="@dimen/_10sdp"
                                android:layerType="software"/>
                            <androidx.appcompat.widget.LinearLayoutCompat
                                android:orientation="vertical"
                                android:id="@+id/llc_discount_rules"
                                android:visibility="gone"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <com.jeil.emarket.components.textview.TextView
                                    android:paddingLeft="@dimen/_16sdp"
                                    android:paddingRight="@dimen/_16sdp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:layout_marginBottom="@dimen/_5sdp"
                                    android:text="@string/discount_rules"
                                    style="@style/txt_label"/>
                            </androidx.appcompat.widget.LinearLayoutCompat>
                            <androidx.appcompat.widget.LinearLayoutCompat
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_marginBottom="@dimen/_5sdp"
                                android:layout_marginStart="@dimen/_16sdp">
                                <androidx.appcompat.widget.LinearLayoutCompat
                                    android:layout_width="@dimen/_77sdp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="@dimen/_4sdp">
                                    <com.jeil.emarket.components.textview.TextView
                                        android:textColor="@color/transparent"
                                        android:id="@+id/ctv_shipping_address_label"
                                        android:background="@drawable/bg_grey_round"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/shipping_area_comma"
                                        style="@style/txt_label"/>
                                </androidx.appcompat.widget.LinearLayoutCompat>
                                <androidx.appcompat.widget.LinearLayoutCompat
                                    android:orientation="vertical"
                                    android:id="@+id/llc_shimmer_shipping_areas"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="@dimen/_16sdp">
                                    <com.jeil.emarket.components.textview.TextView
                                        android:background="@drawable/bg_grey_round"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"/>
                                    <com.jeil.emarket.components.textview.TextView
                                        android:background="@drawable/bg_grey_round"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/_5sdp"/>
                                    <com.jeil.emarket.components.textview.TextView
                                        android:background="@drawable/bg_grey_round"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/_5sdp"/>
                                </androidx.appcompat.widget.LinearLayoutCompat>
                                <androidx.appcompat.widget.LinearLayoutCompat
                                    android:orientation="vertical"
                                    android:id="@+id/llc_shipping_areas"
                                    android:visibility="gone"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1">
                                    <com.jeil.emarket.components.textview.TextView
                                        android:id="@+id/ctv_shipping_areas"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginBottom="@dimen/_8sdp"
                                        android:layout_marginEnd="@dimen/_16sdp"
                                        style="@style/txt_info"/>
                                    <com.jeil.emarket.components.textview.TextView
                                        android:id="@+id/ctv_extra_shipping_areas"
                                        android:visibility="gone"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginEnd="@dimen/_16sdp"
                                        style="@style/txt_info"/>
                                    <com.jeil.emarket.components.ActionLink
                                        android:layout_gravity="end"
                                        android:id="@+id/cal_show_shipping_address"
                                        android:paddingLeft="@dimen/main_space"
                                        android:paddingTop="@dimen/_5sdp"
                                        android:paddingRight="@dimen/main_space"
                                        android:paddingBottom="@dimen/_5sdp"
                                        android:visibility="gone"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginEnd="@dimen/main_space"
                                        app:al_distance="@dimen/_3sdp"
                                        app:al_drawable="@drawable/ic_angle_right"
                                        app:al_drawable_color="?attr/colorPrimary"
                                        app:al_drawable_size="@dimen/_14sdp"
                                        app:al_drawable_start="false"
                                        app:al_text="@string/show_all"
                                        app:al_text_color="?attr/colorPrimary"
                                        app:al_text_size="@dimen/font_11_5"
                                        app:mrl_rippleRoundedCorners="@dimen/_30sdp"
                                        style="@style/RippleStyleDark"/>
                                </androidx.appcompat.widget.LinearLayoutCompat>
                            </androidx.appcompat.widget.LinearLayoutCompat>
                            <androidx.appcompat.widget.LinearLayoutCompat
                                android:paddingLeft="@dimen/_16sdp"
                                android:paddingRight="@dimen/_16sdp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <androidx.appcompat.widget.LinearLayoutCompat
                                    android:layout_width="@dimen/_77sdp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="@dimen/_4sdp">
                                    <com.jeil.emarket.components.textview.TextView
                                        android:textColor="@color/transparent"
                                        android:id="@+id/ctv_guarantee_label"
                                        android:background="@drawable/bg_grey_round"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/guarantee_day_comma"
                                        style="@style/txt_label"/>
                                </androidx.appcompat.widget.LinearLayoutCompat>
                                <com.jeil.emarket.components.textview.TextView
                                    android:textColor="@color/transparent"
                                    android:gravity="end"
                                    android:id="@+id/ctv_guarantee"
                                    android:background="@drawable/bg_grey_round"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/guarantee_day"
                                    style="@style/txt_info"/>
                            </androidx.appcompat.widget.LinearLayoutCompat>
                        </androidx.appcompat.widget.LinearLayoutCompat>
                    </com.facebook.shimmer.ShimmerFrameLayout>
                </androidx.appcompat.widget.LinearLayoutCompat>
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:orientation="vertical"
                    android:id="@+id/ll_description"
                    android:background="@drawable/bg_box"
                    android:paddingLeft="@dimen/main_space"
                    android:paddingTop="@dimen/_25sdp"
                    android:paddingRight="@dimen/main_space"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.jeil.emarket.components.textview.TextView
                        android:textSize="@dimen/font_15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_7sdp"
                        android:layout_marginRight="@dimen/_7sdp"
                        android:layout_marginBottom="@dimen/_15sdp"
                        android:text="@string/product_description"
                        style="@style/txt_section_title"/>
                </androidx.appcompat.widget.LinearLayoutCompat>
            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.core.widget.NestedScrollView>
</androidx.appcompat.widget.LinearLayoutCompat>
