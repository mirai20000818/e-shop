<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/_12sdp">
    <com.balysv.materialripple.MaterialRippleLayout
        android:id="@+id/mrl_select_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/RippleStyleDark">
        <com.jeil.emarket.components.textview.TextView
            android:textColorHint="@color/light"
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_cancel_order_reason"
            style="@style/address_modal"/>
    </com.balysv.materialripple.MaterialRippleLayout>
    <androidx.appcompat.widget.AppCompatImageView
        android:theme="@style/Theme.AppCompat"
        android:layout_gravity="end|center_vertical"
        android:layout_width="@dimen/_14sdp"
        android:layout_height="@dimen/_14sdp"
        android:tint="@color/body"
        android:layout_marginEnd="@dimen/_14sdp"
        app:srcCompat="@drawable/ic_angle_down"/>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
