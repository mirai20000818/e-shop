<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/grey"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:nestedScrollingEnabled="true">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:elevation="@dimen/_0sdp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_scrollFlags="scroll">
            <include
                android:id="@+id/header"
                layout="@layout/layout_top_bar"/>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:orientation="vertical"
                android:id="@+id/ll_categories"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/header">
                <View
                    android:id="@+id/header_border"
                    android:background="@color/border"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_0_5sdp"/>
                <com.jeil.emarket.components.RecyclerTabLayout
                    android:id="@+id/rtl_sub_categories"
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <View
                    android:id="@+id/header_tab_border"
                    android:background="@color/border"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_0_5sdp"/>
            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.appbar.AppBarLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">
        <androidx.viewpager.widget.ViewPager
            android:id="@+id/vp_categories"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <include
            android:visibility="gone"
            layout="@layout/layout_filter_button"/>
    </RelativeLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
