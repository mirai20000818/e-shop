<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fr_item"
    android:background="@drawable/bg_box"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/main_space"
    android:layout_marginRight="@dimen/main_space">
    <com.balysv.materialripple.MaterialRippleLayout
        android:id="@+id/mrl_show_detail"
        android:paddingTop="@dimen/_10sdp"
        android:paddingBottom="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/_16sdp"
        android:paddingEnd="@dimen/_11sdp"
        app:mrl_rippleRoundedCorners="@dimen/_7sdp"
        style="@style/RippleStyleDark">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/llc_order_id_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_7sdp"
                android:layout_marginBottom="@dimen/_6sdp">
                <com.jeil.emarket.components.textview.TextView
                    android:layout_width="@dimen/_68sdp"
                    android:layout_height="wrap_content"
                    android:text="@string/order_id"
                    style="@style/txt_label"/>
                <com.jeil.emarket.components.textview.TextView
                    android:textSize="@dimen/font_12_5"
                    android:id="@+id/ctv_order_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/txt_info"/>
            </androidx.appcompat.widget.LinearLayoutCompat>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_7sdp"
                android:layout_marginBottom="@dimen/_7sdp"
                android:layout_marginEnd="@dimen/_6sdp">
                <com.jeil.emarket.components.textview.TextView
                    android:layout_width="@dimen/_68sdp"
                    android:layout_height="wrap_content"
                    android:text="@string/order_requested_at"
                    style="@style/txt_label"/>
                <com.jeil.emarket.components.textview.TextView
                    android:id="@+id/ctv_order_requested_at"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/txt_info"/>
            </androidx.appcompat.widget.LinearLayoutCompat>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_1sdp"
                android:layout_marginBottom="@dimen/_2sdp"
                android:layout_marginEnd="@dimen/_5sdp">
                <com.jeil.emarket.components.textview.TextView
                    android:layout_width="@dimen/_68sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_1sdp"
                    android:text="@string/sale_total_comma"
                    style="@style/txt_label"/>
                <com.jeil.emarket.components.price.ProductPrice
                    android:gravity="center_vertical"
                    android:id="@+id/pp_order_kpf_total_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:pp_currency="kpf"
                    app:pp_priceSize="14"/>
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv_plus"
                    android:visibility="gone"
                    android:layout_width="@dimen/_8sdp"
                    android:layout_height="@dimen/_8sdp"
                    android:layout_marginStart="-2dp"
                    android:layout_marginEnd="@dimen/_3sdp"
                    app:srcCompat="@drawable/ic_plus"/>
                <com.jeil.emarket.components.price.ProductPrice
                    android:gravity="center_vertical"
                    android:id="@+id/pp_order_kpw_total_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:pp_currency="kpw"
                    app:pp_priceSize="14"/>
            </androidx.appcompat.widget.LinearLayoutCompat>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/llc_order_count_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_6sdp"
                android:layout_marginBottom="@dimen/_6sdp"
                android:layout_marginEnd="@dimen/_5sdp">
                <com.jeil.emarket.components.textview.TextView
                    android:layout_width="@dimen/_68sdp"
                    android:layout_height="wrap_content"
                    android:text="@string/order_count"
                    style="@style/txt_label"/>
                <com.jeil.emarket.components.textview.TextView
                    android:id="@+id/ctv_order_product_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/txt_info"/>
            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </com.balysv.materialripple.MaterialRippleLayout>
    <com.jeil.emarket.components.textview.TextView
        android:id="@+id/ctv_order_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_14sdp"
        android:layout_marginBottom="@dimen/_0sdp"
        android:layout_marginStart="@dimen/_0sdp"
        android:layout_marginEnd="@dimen/_16sdp"
        style="@style/order_label"/>
    <com.balysv.materialripple.MaterialRippleLayout
        android:layout_gravity="end|bottom"
        android:id="@+id/mrl_cancel_order"
        android:paddingTop="@dimen/_5sdp"
        android:paddingBottom="@dimen/_5sdp"
        android:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_10sdp"
        android:paddingStart="@dimen/_8sdp"
        android:paddingEnd="@dimen/_5sdp"
        android:layout_marginStart="@dimen/_0sdp"
        android:layout_marginEnd="@dimen/_11sdp"
        app:mrl_rippleRoundedCorners="@dimen/_30sdp"
        style="@style/RippleStyleDark">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_order_action"
                android:layout_width="@dimen/_14sdp"
                android:layout_height="@dimen/_14sdp"
                android:layout_marginEnd="@dimen/_3sdp"
                app:srcCompat="@drawable/ic_close_circle"
                app:tint="?attr/colorPrimary"/>
            <com.jeil.emarket.components.textview.TextView
                android:textSize="@dimen/font_11_5"
                android:textColor="?attr/colorPrimary"
                android:gravity="center"
                android:id="@+id/tv_order_action"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/action_cancel_order"/>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </com.balysv.materialripple.MaterialRippleLayout>
</FrameLayout>
