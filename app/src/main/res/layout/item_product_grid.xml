<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fr_main"
    android:background="@drawable/bg_box"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.balysv.materialripple.MaterialRippleLayout
        android:id="@+id/mrl_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:mrl_rippleRoundedCorners="@dimen/_7sdp"
        style="@style/RippleStyleDark">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:id="@+id/ll_main"
            android:paddingLeft="@dimen/main_space"
            android:paddingTop="@dimen/main_space"
            android:paddingRight="@dimen/main_space"
            android:paddingBottom="@dimen/half_space"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <FrameLayout
                android:id="@+id/fr_product_img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.AppCompatImageView
                    android:theme="@style/Theme.AppCompat"
                    android:id="@+id/iv_product_img"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/ic_placeholder"/>
                <com.jeil.emarket.components.textview.TextView
                    android:textSize="@dimen/font_7"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:id="@+id/tv_monthly_badge"
                    android:background="@drawable/badge_4"
                    android:visibility="gone"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"/>
                <com.jeil.emarket.components.textview.TextView
                    android:textSize="@dimen/font_7"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:id="@+id/tv_new_product_badge"
                    android:background="@drawable/new_product_badge"
                    android:paddingTop="@dimen/_1sdp"
                    android:paddingBottom="@dimen/_3sdp"
                    android:visibility="gone"
                    android:layout_width="@dimen/_44sdp"
                    android:layout_height="@dimen/_18sdp"
                    android:text="@string/new_products"
                    android:paddingStart="@dimen/_5sdp"
                    android:paddingEnd="@dimen/_7sdp"/>
                <View
                    android:id="@+id/vw_out_of_stock"
                    android:background="@color/overlay"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"/>
                <com.jeil.emarket.components.textview.TextView
                    android:textSize="@dimen/font_11"
                    android:textColor="@color/white"
                    android:layout_gravity="center"
                    android:id="@+id/tv_out_of_stock"
                    android:background="@drawable/bg_out_of_stock"
                    android:paddingLeft="@dimen/_16sdp"
                    android:paddingTop="@dimen/_9sdp"
                    android:paddingRight="@dimen/_16sdp"
                    android:paddingBottom="@dimen/_9sdp"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/empty_stock"/>
            </FrameLayout>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.jeil.emarket.components.textview.TextView
                    android:ellipsize="end"
                    android:id="@+id/tv_product_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_13sdp"
                    android:layout_marginBottom="@dimen/_2_5sdp"
                    android:maxLines="2"
                    android:lineSpacingExtra="@dimen/_4sdp"
                    style="@style/txt_product_name"/>
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_12sdp">
                    <com.jeil.emarket.components.textview.TextView
                        android:textSize="@dimen/font_7"
                        android:id="@+id/tv_pre_order_label"
                        android:paddingLeft="@dimen/_6sdp"
                        android:paddingTop="@dimen/_3sdp"
                        android:paddingRight="@dimen/_6sdp"
                        android:paddingBottom="@dimen/_3sdp"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/pre_order"
                        android:layout_marginEnd="@dimen/_3sdp"
                        style="@style/label_pre_order"/>
                    <com.jeil.emarket.components.textview.TextView
                        android:textSize="@dimen/font_7"
                        android:id="@+id/tv_discount_label"
                        android:paddingLeft="@dimen/_6sdp"
                        android:paddingTop="@dimen/_3sdp"
                        android:paddingRight="@dimen/_6sdp"
                        android:paddingBottom="@dimen/_3sdp"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/label_discount"
                        style="@style/label_pre_order"/>
                </androidx.appcompat.widget.LinearLayoutCompat>
            </FrameLayout>
            <com.jeil.emarket.components.textview.TextView
                android:textSize="@dimen/font_9_5"
                android:textColor="@color/body"
                android:gravity="start"
                android:layout_gravity="start"
                android:id="@+id/tv_vendor_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_2sdp"
                android:lineSpacingExtra="@dimen/_5sdp"
                style="@style/txt_product_name"/>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_1sdp"
                android:layout_marginBottom="@dimen/_2sdp">
                <com.jeil.emarket.components.price.ProductPrice
                    android:gravity="center"
                    android:orientation="vertical"
                    android:id="@+id/pp_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_1sdp"
                    android:layout_weight="1"/>
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:gravity="center_vertical"
                    android:id="@+id/ll_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:layout_marginStart="@dimen/_5sdp">
                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/iv_rating"
                        android:layout_width="@dimen/_13sdp"
                        android:layout_height="@dimen/_13sdp"
                        android:layout_marginEnd="@dimen/_3sdp"
                        app:srcCompat="@drawable/ic_star_full"/>
                    <com.jeil.emarket.components.textview.TextView
                        android:textSize="@dimen/font_12"
                        android:textColor="@color/body"
                        android:id="@+id/tv_reviews"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/default_review"
                        android:layout_marginEnd="@dimen/_1sdp"/>
                    <com.jeil.emarket.components.textview.TextView
                        android:textSize="@dimen/font_11"
                        android:textColor="@color/light"
                        android:id="@+id/tv_reviews_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/default_rating_count"/>
                </androidx.appcompat.widget.LinearLayoutCompat>
            </androidx.appcompat.widget.LinearLayoutCompat>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:orientation="vertical"
                android:id="@+id/llc_remain_time"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ProgressBar
                    android:id="@+id/pb_progress_time"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_6sdp"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:indeterminate="false"
                    android:progressDrawable="@drawable/bg_revert_progress_gradient"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"/>
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_5sdp">
                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="@dimen/_10sdp"
                        android:layout_height="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_4sdp"
                        app:srcCompat="@drawable/ic_clock"
                        app:tint="@color/light"/>
                    <com.jeil.emarket.components.textview.TextView
                        android:textSize="@dimen/font_8_5"
                        android:textColor="@color/light"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/remain_time"
                        android:layout_marginEnd="@dimen/_5sdp"/>
                    <com.jeil.emarket.components.textview.TextView
                        android:textSize="@dimen/font_8_5"
                        android:textColor="@color/light"
                        android:id="@+id/ctv_remain_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </androidx.appcompat.widget.LinearLayoutCompat>
            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </com.balysv.materialripple.MaterialRippleLayout>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_gravity="end"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp">
        <com.balysv.materialripple.MaterialRippleLayout
            android:id="@+id/mrl_cart"
            android:background="@drawable/bg_circle_outline_box"
            android:padding="@dimen/_8sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:mrl_rippleRoundedCorners="@dimen/_23sdp"
            style="@style/RippleStyleDark">
            <androidx.appcompat.widget.AppCompatImageView
                android:theme="@style/Theme.AppCompat"
                android:id="@+id/iv_cart"
                android:layout_width="@dimen/_17sdp"
                android:layout_height="@dimen/_17sdp"
                app:srcCompat="@drawable/ic_cart"/>
        </com.balysv.materialripple.MaterialRippleLayout>
        <com.balysv.materialripple.MaterialRippleLayout
            android:id="@+id/mrl_wishlist"
            android:background="@drawable/bg_circle_outline_box"
            android:padding="@dimen/_8sdp"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            app:mrl_rippleRoundedCorners="@dimen/_23sdp"
            style="@style/RippleStyleDark">
            <androidx.appcompat.widget.AppCompatImageView
                android:theme="@style/Theme.AppCompat"
                android:layout_width="@dimen/_17sdp"
                android:layout_height="@dimen/_17sdp"
                android:tint="@color/dark"
                app:srcCompat="@drawable/ic_trash"/>
        </com.balysv.materialripple.MaterialRippleLayout>
    </androidx.appcompat.widget.LinearLayoutCompat>
</FrameLayout>
