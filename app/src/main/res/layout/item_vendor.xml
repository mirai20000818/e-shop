<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fl_vendor"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.appcompat.widget.LinearLayoutCompat
        android:orientation="vertical"
        android:id="@+id/ll_main"
        android:background="@drawable/bg_box"
        android:paddingTop="@dimen/_17sdp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/main_space"
        android:layout_marginRight="@dimen/main_space">
        <FrameLayout
            android:paddingLeft="@dimen/_17sdp"
            android:paddingRight="@dimen/_17sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_15sdp">
            <androidx.appcompat.widget.AppCompatImageView
                android:theme="@style/Theme.AppCompat"
                android:id="@+id/vendor_card_img"
                android:background="@drawable/bg_box"
                android:layout_width="300dp"
                android:layout_height="@dimen/_173sdp"
                android:scaleType="fitXY"/>
            <androidx.appcompat.widget.AppCompatImageView
                android:theme="@style/Theme.AppCompat"
                android:id="@+id/vendor_logo_img"
                android:background="@drawable/bg_box"
                android:padding="@dimen/_5sdp"
                android:layout_width="@dimen/_83sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:scaleType="fitCenter"
                android:layout_marginStart="@dimen/_10sdp"/>
        </FrameLayout>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:orientation="vertical"
            android:paddingLeft="@dimen/_17sdp"
            android:paddingRight="@dimen/_17sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_17sdp">
            <androidx.appcompat.widget.LinearLayoutCompat
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_10sdp">
                <com.jeil.emarket.components.textview.TextView
                    android:layout_width="@dimen/font_85"
                    android:layout_height="wrap_content"
                    android:text="@string/vendor_rating"
                    android:layout_marginEnd="@dimen/main_space"
                    style="@style/txt_label"/>
                <com.jeil.emarket.components.vendor.VendorLevel
                    android:id="@+id/vl_vendor_level"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </androidx.appcompat.widget.LinearLayoutCompat>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/ll_vendor_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_13sdp">
                <com.jeil.emarket.components.textview.TextView
                    android:layout_width="@dimen/font_85"
                    android:layout_height="wrap_content"
                    android:text="@string/vendor_name_comma"
                    android:layout_marginEnd="@dimen/main_space"
                    style="@style/txt_label"/>
                <com.jeil.emarket.components.textview.TextView
                    android:textSize="@dimen/font_12"
                    android:id="@+id/ep_vendor_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/txt_info"/>
            </androidx.appcompat.widget.LinearLayoutCompat>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/ll_enter_year"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.jeil.emarket.components.textview.TextView
                    android:layout_width="@dimen/font_85"
                    android:layout_height="wrap_content"
                    android:text="@string/enter_years"
                    android:layout_marginEnd="@dimen/main_space"
                    style="@style/txt_label"/>
                <com.jeil.emarket.components.textview.TextView
                    android:textSize="@dimen/font_12"
                    android:id="@+id/ep_enter_year"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/txt_info"/>
            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.appcompat.widget.LinearLayoutCompat>
    <com.balysv.materialripple.MaterialRippleLayout
        android:id="@+id/mrl_wishlist"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/main_space"
        android:layout_marginRight="@dimen/main_space"
        app:mrl_rippleRoundedCorners="@dimen/_7sdp"
        style="@style/RippleStyleDark">
        <com.jeil.emarket.components.textview.TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </com.balysv.materialripple.MaterialRippleLayout>
    <com.balysv.materialripple.MaterialRippleLayout
        android:layout_gravity="end|bottom"
        android:id="@+id/mrl_add_to_wishlist"
        android:background="@drawable/bg_white_circle"
        android:padding="@dimen/_12sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_13sdp"
        android:layout_marginEnd="@dimen/_15sdp"
        app:mrl_rippleRoundedCorners="@dimen/_30sdp"
        style="@style/RippleStyleDark">
        <androidx.appcompat.widget.AppCompatImageView
            android:theme="@style/Theme.AppCompat"
            android:id="@+id/iv_wishlist"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:scaleType="fitXY"
            android:tint="@color/body"
            app:srcCompat="@drawable/ic_wishlist_empty"/>
    </com.balysv.materialripple.MaterialRippleLayout>
</FrameLayout>
