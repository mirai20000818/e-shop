<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/ll_ticket_result"
    android:background="@drawable/bg_box"
    android:paddingTop="@dimen/_10sdp"
    android:paddingBottom="@dimen/_5sdp"
    android:visibility="visible"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.appcompat.widget.LinearLayoutCompat
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:layout_marginBottom="@dimen/_8sdp">
        <com.jeil.emarket.components.textview.TextView
            android:textSize="@dimen/font_13"
            android:textColor="@color/dark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ticket_warning"/>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <com.jeil.emarket.components.textview.TextView
            android:layout_gravity="center"
            android:background="@drawable/bg_white_circle"
            android:layout_width="@dimen/_9sdp"
            android:layout_height="@dimen/_9sdp"
            android:layout_marginEnd="@dimen/_6sdp"
            android:backgroundTint="@color/pending"/>
        <com.jeil.emarket.components.textview.TextView
            android:textSize="@dimen/font_11_5"
            android:id="@+id/tv_pending"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_10sdp"/>
        <com.jeil.emarket.components.textview.TextView
            android:layout_gravity="center"
            android:background="@drawable/bg_white_circle"
            android:layout_width="@dimen/_9sdp"
            android:layout_height="@dimen/_9sdp"
            android:layout_marginEnd="@dimen/_6sdp"
            android:backgroundTint="@color/open"/>
        <com.jeil.emarket.components.textview.TextView
            android:textSize="@dimen/font_11_5"
            android:id="@+id/tv_open"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </androidx.appcompat.widget.LinearLayoutCompat>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.core.widget.NestedScrollView
            android:id="@+id/nsv_ticket"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.LinearLayoutCompat
                android:orientation="vertical"
                android:id="@+id/ll_ticket"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </androidx.core.widget.NestedScrollView>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_gravity="top"
            android:orientation="horizontal"
            android:id="@+id/ll_top_gradient"
            android:background="@drawable/grad_top_bottom"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"/>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_gravity="bottom"
            android:orientation="horizontal"
            android:id="@+id/ll_bottom_gradient"
            android:background="@drawable/grad_bottom_top"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_60sdp"/>
    </FrameLayout>
</androidx.appcompat.widget.LinearLayoutCompat>
